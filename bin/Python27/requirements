# Windows setup:
#  Install latest Python 2.7.x
#  rd /s/q Python27
#  c:\Python27\python -m pip install --upgrade virtualenv==15.0.3
#  scipy, numpy: http://www.lfd.uci.edu/~gohlke/pythonlibs/
#  lxml: http://www.lfd.uci.edu/~gohlke/pythonlibs/#lxml
#  c:\Python27\python.exe -m virtualenv Python27
#  Python27\scripts\activate.bat
#  git checkout Python27/requirements
#  python -m easy_install %userprofile%\Downloads\pywin32-221.win-amd64-py2.7.exe
#  python -m easy_install %userprofile%\Downloads\elementtree-1.2.7-20070827-preview.zip
#  python -m pip install %userprofile%\Downloads\numpy-1.13.3+mkl-cp27-cp27m-win_amd64.whl
#  python -m pip install %userprofile%\Downloads\scipy-1.0.0-cp27-cp27m-win_amd64.whl
#  python -m pip install %userprofile%\Downloads\lxml-4.1.1-cp27-cp27m-win_amd64.whl # Ricardo and py_modelica_exporter
#  python -m pip install %userprofile%\Downloads\matplotlib-2.1.0-cp27-cp27m-win_amd64.whl # Ricardo tool
#  python -m pip install %userprofile%\Downloads\smop-0.23+g5828d12-cp27-none-win_amd64.whl # https://ci.appveyor.com/project/ksmyth/smop/
#  python -m pip install -r Python27\requirements
# apply patch from this revision: git log HEAD@"{2017-01-04}" -- bin/Python27/Lib/site-packages/openmdao/units/unit_library.ini
#  git checkout HEAD -- ubuntu_create_venv.sh ubuntu_create_venv_w_META_packages.sh Lib/site-packages/sitecustomize.py
#  bash: cd $(git rev-parse --show-toplevel) && git status --porcelain bin/Python27/Scripts | grep '^ D ' | grep -E '(\.pyd|dll)' | sed 's/^...//' | xargs git checkout HEAD -- bin/Python27/Scripts/{activate.bat,Python27.zip} bin/Python27/libs/python27.lib
#  git mv bin\Python27\Lib\site-packages\pywin32-221-py2.7-win-amd64.egg\pywintypes27.dll bin\Python27\
#  git mv bin/Python27/Lib/site-packages/pywin32-221-py2.7-win-amd64.egg/pythoncom27.dll bin\Python27\
#  git add -f --all Python27

